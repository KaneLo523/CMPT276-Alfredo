<!DOCTYPE html>
<html>
  <head>
    <title>Alfredo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='container'>
      <% flash.each do |message_type, message| %>
        <div class='alert alert-<% message_type %>'><%= message %></div>
      <% end %>
    </head>


    <div id="logo">
      <a href="/"><%=image_tag("the-music-reivew.png", width: "100px", height: "64px")%></a>
      <a><i><sup>Alfredo</sup></i></a>
     </div>
     <div class="topnav">

     <% if session[:user_id] %>
     <%=link_to "LOGOUT", logout_path, method: :delete %>
     <%=link_to "PROFILE", current_user %>
     <%else %>
     <a href="/login">LOGIN</a>
     <a href="/signup">SIGNUP</a>
     <% end %>

     <div class="search-container">
     <%= form_tag artists_path, method: "get", html: { class: "form" } do %>
      <div class="form-group col-xs-4">
        <%= text_field_tag(:artist_name, "", placeholder: "Enter an artist...", class: "form-control") %>
      <!--</div>-->
      <button type="submit"><i class="fa fa-search"></i></button>
      <!--<%= submit_tag "Search", class: "btn btn-primary" %>-->
     <% end %>
     </div>

       <!--<input type="text" placeholder="Search.." name="search">-->
       <!--<button type="submit"><i class="fa fa-search"></i></button>-->
     </form>
     </div>
     </div>



     </body>
      <%= yield %>
    </div>
  </body>
</html>
